<% var title = current.source.replace(/\w*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();}).replace(/-/g,' '); %>
<!DOCTYPE html>
<html lang="en">
<head>
  <title><%- title %> - Justin DuJardin</title>
  <link rel="canonical" href="<%-sitemapRoot%>articles/<%-current.source%>.html" />
  <%- partial('../partials/_head.ejs') %>
</head>

<body class="article">

<%- partial('../partials/_header.ejs') %>

<section class="container" id="article">
  <%- yield %>
</section>

<section class="container" id="comments">
  <%- partial('../partials/_disqus.ejs') %>
</section>

<%- partial('../partials/_footer.ejs') %>

</body>
</html>
