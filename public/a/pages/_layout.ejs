<%
  var title = current.source.replace(/\w*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();}).replace(/-/g,' ');
  var blurb = public.a.pages._data[current.source].blurb;
%>
<!DOCTYPE html>
<html lang="en">
<head>
  <title><%- title %></title>
  <link rel="canonical" href="<%-sitemapRoot%>a/pages/<%-current.source%>.html" />
  <meta name="description" content="<%- blurb %>">

  <script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "NewsArticle",
    "headline": "<%- title %>",
    "description": "<%- blurb %>"
  }
  </script>
  <%- partial('../partials/_head.ejs') %>
</head>

<body class="page">

<%- partial('../partials/_header.ejs') %>

<section class="container" id="article">
  <header>
    <% var data = public.a.pages._data[current.source]; if(data && data.github){ %>
    <a class="project-link" title="View project on Github" href="<%- data.github %>" target="_blank"><i
        class="fa fa-github"></i></a>
    <% } %>
  </header>
  <footer>
    <%- yield %>
  </footer>
</section>

<%- partial('../partials/_footer.ejs') %>

</body>
</html>
